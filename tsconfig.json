{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "lib/**/*"
  ]
}
